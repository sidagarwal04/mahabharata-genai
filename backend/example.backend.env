# FastAPI Backend Environment Variables
# Copy this file to .env and fill in your values

# OpenAI Configuration (Required for GPT-4o)
OPENAI_API_KEY=your_openai_api_key_here

# Neo4j Database Configuration
NEO4J_URI=your_neo4j_uri
NEO4J_USERNAME=your_neo4j_username
NEO4J_PASSWORD=your_neo4j_password
NEO4J_DATABASE=neo4j

# Google Cloud Configuration (for translation and Gemini)
PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_PROJECT=your_google_cloud_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS_JSON=  # Optional: path to credentials JSON

# ElevenLabs Configuration (for Hindi audio)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# LLM MODEL CONFIGS
LLM_MODEL_CONFIG_OPENAI_GPT_4O=gpt-4o,your_openai_api_key_here
LLM_MODEL_CONFIG_GEMINI_1_5_PRO=gemini-1.5-pro
LLM_MODEL_CONFIG_GEMINI_1_5_FLASH=gemini-1.5-flash
LLM_MODEL_CONFIG_GEMINI_2_0_FLASH=gemini-2.0-flash-001
LLM_MODEL_CONFIG_GEMINI_2_0_PRO=gemini-2.0-pro-exp-02-05
LLM_MODEL_CONFIG_GEMINI_2_5_PRO_EXPERIMENTAL=gemini-2.5-pro-exp-03-25
LLM_MODEL_CONFIG_CLAUDE=claude-3-sonnet-20240229,your_claude_api_key_here

# Search Configuration
EFFECTIVE_SEARCH_RATIO=5

# Server Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# CORS Configuration (for production, specify exact origins)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com